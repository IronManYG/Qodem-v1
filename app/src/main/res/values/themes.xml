<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qodem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/secondaryDarkColor</item>
        <item name="android:fontFamily">@font/cairo</item>
    </style>

    <style name="Widget.Qodem.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primaryColorBackground</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="iconTint">@color/primaryColorBackground</item>
    </style>

</resources>