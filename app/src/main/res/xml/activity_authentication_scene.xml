<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:autoTransition="animateToEnd"
        motion:staggered="0.50">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/card_feature1"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/text_app_description2"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="52dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:alpha="0" />
        <Constraint
            android:id="@+id/card_feature2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/card_feature1"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="16dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:alpha="0" />
        <Constraint
            android:id="@+id/card_feature3"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/card_feature2"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="16dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:alpha="0" />
        <Constraint
            android:id="@+id/text_app_description1"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/text_app_name"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="10dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/text_app_description2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/text_app_description1"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="10dp"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>